@model CartProduct
@{ 
    ViewData["Title"] = " | Edit Cart";
}
<h1>Edit Cart Item</h1>
<form asp-action="Edit" method="post">
    <ul class="list-group mb-2">
        <li class="list-group-item">@Model.Product.Name</li>
        <li class="list-group-item">
            <div class="row">
                <div class="col-1">
                    <label>Price:</label>
                </div>
                <div class="col">
                    @Model.Product.Price.ToString("c")
                </div>
            </div>
        </li>
        <li class="list-group-item">
            <div class="form-row">
                <div class="col-1">
                    <label asp-for="Quantity">Quantity:</label>
                </div>
                <div class="col">
                    <select asp-for="Quantity" class="form-control">
                        @for (int p = 1; p <= 15; p++)
                        {
                            <option>@p</option>
                        }
                    </select>
                </div>
            </div>
        </li>
    </ul>
    <input type="hidden" asp-for="Product.ProductID" />
    <input type="hidden" asp-for="Product.Name" />

    <button type="submit" class="btn btn-success">Save</button>
    <a asp-action="Review" asp-controller="Cart" class="btn btn-danger">Cancel</a>
</form>