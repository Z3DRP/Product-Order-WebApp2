@model IEnumerable<ProductViewModel>
@{ ViewData["Title"] = "View Products";}
<div>
    <h2>@ViewData["Header"]</h2>
</div>
<div class="top-content">
    <div class="container d-flex justify-content-center">
        <div id="productCarousel" class="carousel" data-ride="carousel" @*data-interval="500"*@>
            <div class="carousel-inner">
                @foreach (ProductViewModel p in Model)
                {
                    <div class="carousel-item @(p == Model.First() ? "active" : "")">
                        <div class="container-fluid">
                            <div class="card mx-auto col-md-3 col-10 mt-5">
                                <img class="mx-auto img-thumbnail" src="~/images/@p.Image" alt="Picture of @p.Name"/>
                                <div class="card-body text-center mx-auto">
                                    <div class="cvp">
                                        <h5 class="card-title font-weight-bold">@p.Name</h5>
                                        <p class="card-text">@p.UnitPrice</p>
                                        <a asp-area="" asp-action="Details" asp-controller="Product" asp-route-id="@p.Id"
                                           class="btn px-auto">View Details</a><br />
                                        <!--Adds one item to the prouct list-->
                                        <a asp-area="" asp-action="QuickAdd" asp-controller="Product" asp-route-id="@p.Id"
                                           class="btn px-auto">Quick Add</a>
                                        <a asp-area="" asp-action="AddToCart" asp-controller="Product" asp-route-id="@p.Id"
                                           class="btn px-auto">Add to Cart</a>
                                    </div>
                                </div>
                            </div>
                        </div>                       
                    </div>
                }
            </div>
            <a class="carousel-control-prev" href="#productCarousel" role="button" data-slide="prev">
                <!--Change to fontawesome arrows so they can be darkened-->
                @*<span class="carousel-control-prev-icon" aria-hidden="true"></span>*@
                <i class="fa-solid fa-arrow-left-long" aria-hidden="true" style="color:slateblue"></i>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#productCarousel" role="spinbutton" data-slide="next">
                @*<span class="carousel-control-next-icon" aria-hidden="true"></span>*@
                <i class="fa-solid fa-arrow-right-long" aria-hidden="true" style="color:slateblue"></i>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
</div>