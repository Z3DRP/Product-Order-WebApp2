@model User
@{ ViewBag.Title = $"Delete Customer";}



<form asp-action="Delete" method="post">

    <input type="hidden" asp-for="UserID" />
    <p>
        You are about to delete customer <b>@Model.Username</b>. Do you wish to contiune?
    </p>

    <button type="submit" class="btn btn-danger">Yes</button>
    <a asp-area="" asp-action="Details" asp-controller="User"
       asp-route-model="@ViewBag.Action"
       class="btn btn-dark">No</a>

</form>