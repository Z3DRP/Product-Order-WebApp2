@model User
@{
    ViewBag.Title = $"{ViewBag.Action} User";
    var session = new TempUserSession(Context.Session);
}

<div asp-validation-summary="All" class="text-danger"></div>

<script type="text/javascript">

    let msg = "";

    if ("@TempData["customerStatus"]" == "existing") {
        msg = "You have a existing username.";
        function my_code() {
            alert(msg);
        }
        window.onload = my_code();

    } // end if
    else if ("@TempData["customerStatus"]" != "added") {
        msg = "You must create sign up first to create a username.";
        function my_code() {
            alert(msg);
        }
        window.onload = my_code();
    }
    else if ("@TempData["customerStatus"]" == "added") {
        msg = "This Feature is still under construction please come back later.";
        function my_code() {
            alert(msg);
        }
        window.onload = my_code();
    }
</script>

@if (TempData["customerStatus"].ToString() == "added")
{

    <h2>This feature is under construction</h2>

    <div class="container-fluid justify-content-center">
        <div class="card" style="width:auto">
            <img class="card-img-top p-1" src="/Images/construction.png" alt="Construction sign" />
            <br />
            <div class="card-body bg-warning">
                <h4 class="card-title p-1">Account Creation</h4>
                <p class="card-text">
                    You must enter sign up before you can add a username into the system.
                </p>
                <a asp-area="" asp-action="Add" asp-controller="Customer" class="btn btn-success">Sign up</a>
                <a asp-area="" asp-action="Landing" asp-controller="Home" class="btn btn-success">Back</a>
            </div>
        </div>
    </div>


