}
else if (TempData["customerStatus"].ToString() == "existing")
{
    <h2>You already have an account</h2>

    <div class="container-fluid justify-content-center">
        <div class="card" style="width:auto">
            <img class="card-img-top p-1" src="/Images/userAdd.jpg" alt="Existing user icon" />
            <br />
            <div class="card-body bg-warning">
                <h4 class="card-title p-1">@(session.GetUsrName() == null ? "" : session.GetUsrName()) you already have an account</h4>
                <p class="card-text">
                    Please check out products.
                </p>
                <a asp-area="" asp-action="Display" asp-controller="Product" class="btn btn-success">Products</a>
                <a asp-area="" asp-action="Landing" asp-controller="Home" class="btn btn-success">Back</a>
            </div>
        </div>
    </div>
}
else
{
    <h2>Please sign up before trying to create a username</h2>

    <div class="container-fluid justify-content-center">
        <div class="card" style="width:auto">
            <img class="card-img-top p-1" src="/Images/userAdd.png" alt="Adding user icon" />
            <br />
            <div class="card-body bg-warning">
                <h4 class="card-title p-1">Account Creation</h4>
                <p class="card-text">
                    You must enter sign up before you can add a username into the system.
                </p>
                <a asp-area="" asp-action="Add" asp-controller="Customer" class="btn btn-success">Sign up</a>
                <a asp-area="" asp-action="Landing" asp-controller="Home" class="btn btn-success">Back</a>
            </div>
        </div>
    </div>
}

