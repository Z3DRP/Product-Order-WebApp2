@model TempUser
@{ 
    var session = new TempUserSession(Context.Session);
}

<div class="container-fluid justify-content-center">
    <div class="card" style="width:auto">
        <img class="card-img-top p-1" src="/Images/apex2.jpg" alt="Apex Logo" />
        <br />
        <div class="card-body">
            <h4 class="card-title p-1">Welcome Back @(session.GetUsrName() == null ? "" : session.GetUsrName()) </h4>
            <p class="card-text">
                @TempData["Message"]
            </p>
            <!--Need to add the asp controller-->
            <a asp-area="" asp-action="QuickView" asp-controller="Product">Goto Products</a>
            <a asp-area="" asp-action="SignUp" asp-controller="Customer">Sign Up</a>
        </div>
    </div>
</div>