@model OdersWebApp.Models.Order
@{ ViewBag.Title = "Delete Order"; }

<h2>Delete Order</h2>

<form asp-action="Delete" method="post">

    <input type="hidden" asp-for="OrderID" />

    <p>
        You are about to delete order <b>@Model.OrderID</b>. Do You wish to contiune?
    </p>

    <button type="submit" class="btn btn-danger">Yes</button>
    <a asp-area="Admins" asp-action="Details" asp-controller="Order"
       asp-route-model="@ViewBag.Action" asp-route-val="@Model.Slug"
       class="btn btn-dark">No</a>

</form>